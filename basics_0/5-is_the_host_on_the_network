#!/usr/bin/env bash
# 📌 Vérifie si un argument (l'adresse IP) a été fourni
if [ -z "$1" ]; then
  # ⚠️ Affiche un message d'utilisation si aucun argument
  echo "Usage: 5-is_the_host_on_the_network {IP_ADDRESS}"
  exit 1
fi

# 📡 Envoie 5 paquets ICMP (ping) à l'adresse IP passée en argument
ping -c 5 "$1"
